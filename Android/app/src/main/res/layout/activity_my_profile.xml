<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.example.qode.MainActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/myProfileTextLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nameTextLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myProfileTextLinearLayout"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/profileNameTV"
                android:layout_marginStart="20dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Nickname"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nicknameTextLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameTextLinearLayout"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/profileNicknameTV"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Nickname"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pointTextLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nicknameTextLinearLayout"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="누적 포인트"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/profilePointTV"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Point"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>